<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalWallpaper">


    <ImageView
        android:id="@+id/finalWallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/black"
        />
    <com.yodo1.mas.banner.Yodo1MasBannerAdView
        xmlns:masads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/yodo1_mas_banner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        masads:adSize="AdaptiveBanner" />
    <RelativeLayout
        android:layout_margin="20sp"
        android:id="@+id/bar_bottom"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/bottom_shape2"
        android:layout_alignParentBottom="true"

        >


        <TextView
            android:id="@+id/btnSetWallpaper"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:fontFamily="@font/nunito_bold"
            android:text="Set Wallpaper" />
    </RelativeLayout>
</RelativeLayout>